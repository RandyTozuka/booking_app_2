<div class="container">

  <% if user_signed_in? %>
  <div class="buttoons">
    <%= link_to 'New booking', new_booking_path, class: 'btn btn-default' %>
    <%= link_to 'change your profile', edit_user_registration_path, class: 'btn btn-default'  %>
    <%= link_to 'sign-out', destroy_user_session_path, method: :delete, class: 'btn btn-default' %>
  </div>
  <h3>Your booking status is as below;</h3>
  <div class="wrapper">
    <% if @bookings %>
      <% @bookings.each do |b| %>
        <div class="a-booking">
          <section class="date-slot">
            <%= b.date.strftime('%Y/%m/%d (%a)') %>
            <%= b.slot %>
          </section>
          <section class="buttons">
            <%= link_to 'Change', edit_booking_path(b), class: 'btn btn-default' %>
            <%= link_to 'Delete', booking_path(b), method: :delete, data:{confirm:"Are you sure?"}, class: 'btn btn-danger' %>
          </section>


        </div>
      <% end %>
    <% end %>
  </div>
  <% else %>
   <%= link_to 'sign-up', new_user_registration_path, class: 'btn btn-default' %>
   <%= link_to 'sign-in', new_user_session_path, class: 'btn btn-default'%>
  <% end %>
</div>
